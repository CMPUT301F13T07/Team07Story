<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    android:background="#80000000">
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_margin="1dp"
        android:background="@android:color/white"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="0dip"
            android:layout_margin="50dp"
            android:layout_weight="0.50"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/multimediaTypeTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Multimedia" />

            <TextView
                android:id="@+id/multimediaFileNameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" 
                android:text="File Path" />

            <LinearLayout
                android:id="@+id/multimediaButtonLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/deleteMultimediaButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Delete" />

                <Button
                    android:id="@+id/changeMultimediaButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Modify" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>